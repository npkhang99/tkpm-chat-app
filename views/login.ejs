    integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
    crossorigin="anonymous"></script>
    <title>Simple Chat App</title>
  </head>

  <body>
    <div class="container border rounded" style="padding: 10px 50px;">
      <header>
        <h1>LOG IN</h1>
      </header>

      <form class="col-10 col-lg-8 mt-4" style="margin: 15px auto 0px; padding: 15px 0px;">
        <div class="form-group row">
            <h6 class="col-lg-3 col-xl-2 text-left mt-1"><b>Username:</b></h6>
            <input id="username_login" class="form-control col-lg-9 col-xl-10" type="text" placeholder="Username" autoFocus required/>
        </div>

        <div class="form-group row">
            <h6 class="col-lg-3 col-xl-2 text-left mt-1"><b>Password:</b></h6>
            <input id="password" class="form-control col-lg-9 col-xl-10" type="password" placeholder="Your password" required minlength="6"/>
        </div>

        <div class="d-flex align-items-center row col-11" style="margin: 0 auto;">
            <input class="d-flex" type="checkbox" style="margin-right: 5px;">
            <label class="d-flex" style="margin: 0px; font-size: 12px;">Remember me</label>
            <a href="#" style="margin-left: auto; font-size: 12px; color: #1A2980;">Forgot password?</a>
            
        </div>

        <div class="row" style="margin: 20px auto;">
          <p>If you haven't account, you can create your account<a href="register">here</a>.</p>
        </div>

        <div class="row">
         
            <button id="btn_login" class="btn btn-dark" type="button" style="border: none; font-weight: bold; margin:auto;">LOG IN</button>
         
        </div>

    </form>
     

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="chat.js"></script>
  </body>
</html>
